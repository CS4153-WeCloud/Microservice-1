PORT=3001

# Local Development
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=user_service_db
DB_PORT=3306

# Cloud SQL Configuration (for Cloud Run deployment)
# Option 1: Unix Socket (Recommended for Cloud Run)
# INSTANCE_CONNECTION_NAME=PROJECT_ID:REGION:INSTANCE_NAME
# DB_SOCKET_PATH=/cloudsql
# DB_USER=your_cloud_sql_user
# DB_PASSWORD=your_cloud_sql_password
# DB_NAME=user_service_db

# Option 2: TCP/IP Connection
# INSTANCE_CONNECTION_NAME=PROJECT_ID:REGION:INSTANCE_NAME
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_USER=your_cloud_sql_user
# DB_PASSWORD=your_cloud_sql_password
# DB_NAME=user_service_db

# SSL/TLS Certificates (for private IP connections)
# DB_ROOT_CERT=/path/to/server-ca.pem
# DB_CERT=/path/to/client-cert.pem
# DB_KEY=/path/to/client-key.pem

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Google OAuth2 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback
# For production, use: https://your-service-url.run.app/api/auth/google/callback

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production

# CORS Configuration
CORS_ORIGIN=*
# For production, specify allowed origins: https://your-frontend-domain.com

# Environment
NODE_ENV=development

